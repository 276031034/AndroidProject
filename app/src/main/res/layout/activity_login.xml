<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sh.shprojectdemo.ui.LoginActivity">
    <com.jruilibarary.widget.TemplateTitleBar
        android:id="@+id/template"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="登陆"
        app:canBack="true"
        app:textColors="@color/white"
        android:background="@color/colorPrimary"
        ></com.jruilibarary.widget.TemplateTitleBar>

    <com.jruilibarary.widget.CircleImageView
        android:layout_marginTop="50dp"
        android:id="@+id/image"
        android:layout_margin="30dp"
        android:layout_gravity="center"
        android:layout_width="100dp"
        app:border_width="3dp"
        app:border_color="@color/colorPrimary"
        android:layout_height="100dp"></com.jruilibarary.widget.CircleImageView>

    <android.support.design.widget.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="用户名"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary"
            />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="密码"
        android:layout_marginBottom="20dp"
      >

        <EditText
            android:id="@+id/pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary"
            />
    </android.support.design.widget.TextInputLayout>
    
    
    <Button
        android:id="@+id/button"
        android:text="登录"
        android:textColor="@color/white"
        android:layout_margin="16dp"
        android:background="@drawable/bg_btn_selector_login"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

</LinearLayout>
